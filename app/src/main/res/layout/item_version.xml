<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="version"
            type="com.example.storechat.model.HistoryVersion" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bg_app_apk"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tvVersionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text='@{"v." + version.versionName}'
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            tools:text="v.1.01" />

        <Button
            android:id="@+id/btnInstall"
            android:layout_width="58dp"
            android:layout_height="23dp"
            android:layout_marginTop="4dp"
            android:minWidth="72dp"
            android:text="@{version.buttonText}"
            android:enabled="@{version.buttonEnabled}"
            android:background="@drawable/bg_home_progress_capsule"

            app:backgroundTint="@null"

            android:textColor="@color/blue_action"
            android:paddingTop="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"

            android:textSize="10sp" />
    </LinearLayout>
</layout>
