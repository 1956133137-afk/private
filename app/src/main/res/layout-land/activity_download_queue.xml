<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 数据绑定部分 -->
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.storechat.ui.download.DownloadQueueViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/store_bg">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:contentInsetStart="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 工具栏内部布局 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 返回按钮 -->
                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_arrow_back_25"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- 页面标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载队列"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 搜索按钮 -->
                <ImageView
                    android:id="@+id/ivSearch"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_search_25"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.MaterialToolbar>

        <!-- 2. 主内容区域，采用左右分栏设计 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 2.1 正在下载的任务区域（左侧） -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutHasTask"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="16dp"
                android:visibility="@{viewModel.activeTask == null ? View.GONE : View.VISIBLE}"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layoutRecent"
                tools:visibility="visible">

                <!-- 下载任务标题 -->
                <TextView
                    android:id="@+id/tvDownloadingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.downloadingTitleText}"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="应用名称(1)"/>

                <!-- 全部继续按钮 -->
                <TextView
                    android:id="@+id/tvAllResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部继续"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    app:layout_constraintTop_toTopOf="@id/tvDownloadingTitle"
                    app:layout_constraintBottom_toBottomOf="@id/tvDownloadingTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- 下载任务卡片 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDownloading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tvDownloadingTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- 卡片内部布局 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <!-- 应用图标 -->
                        <ImageView
                            android:id="@+id/ivAppIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_apk_green"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- 应用名称 -->
                        <TextView
                            android:id="@+id/tvAppName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="8dp"
                            android:text="@{viewModel.appName}"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintStart_toEndOf="@id/ivAppIcon"
                            app:layout_constraintTop_toTopOf="@id/ivAppIcon"
                            app:layout_constraintEnd_toStartOf="@id/tvStatus"
                            tools:text="应用名称" />

                        <!-- 进度条 -->
                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:progress="@{viewModel.progressValue}"
                            android:progressDrawable="@drawable/bg_btn_progress_bar"
                            app:layout_constraintTop_toBottomOf="@id/tvAppName"
                            app:layout_constraintStart_toStartOf="@id/tvAppName"
                            app:layout_constraintEnd_toStartOf="@id/ivCancel" />

                        <!-- 文件大小信息 -->
                        <TextView
                            android:id="@+id/tvSizeInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@{viewModel.sizeInfoText}"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp"
                            app:layout_constraintTop_toBottomOf="@id/progressBar"
                            app:layout_constraintStart_toStartOf="@id/progressBar"
                            tools:text="1.8MB/83.0MB" />

                        <!-- 下载速度信息 -->
                        <TextView
                            android:id="@+id/tvSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@{viewModel.speedText}"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp"
                            app:layout_constraintTop_toTopOf="@id/tvSizeInfo"
                            app:layout_constraintStart_toEndOf="@id/tvSizeInfo"
                            tools:text="1.3 MB/s" />

                        <!-- 取消下载按钮 -->
                        <ImageView
                            android:id="@+id/ivCancel"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            app:layout_constraintBottom_toBottomOf="@id/progressBar"
                            app:layout_constraintTop_toTopOf="@id/progressBar"
                            app:layout_constraintEnd_toStartOf="@id/tvStatus"/>

                        <!-- 下载状态按钮（暂停/继续） -->
                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:minWidth="64dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_btn_progress"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:text="@{viewModel.progressText}"
                            android:textColor="@color/blue_action"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:text="16.3%" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 2.2 最近安装完成区域（右侧） -->
            <LinearLayout
                android:id="@+id/layoutRecent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/layoutHasTask"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 标题 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近安装完成"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <!-- 最近安装应用列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    tools:listitem="@layout/item_recent_app_land"
                    tools:itemCount="4" />

            </LinearLayout>

            <!-- 2.3 空状态页面（无下载任务时显示） -->
            <LinearLayout
                android:id="@+id/layoutEmpty"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="@{viewModel.activeTask == null ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="gone">

                <!-- 空状态图标 -->
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/ic_empty_box" />

                <!-- 提示文字 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="当前没有下载任务"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <!-- 返回首页按钮 -->
                <Button
                    android:id="@+id/btnBackHome"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_btn_action"
                    android:paddingHorizontal="24dp"
                    android:text="返回首页"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>