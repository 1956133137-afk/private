    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 导入View类，用于控制视图可见性 -->
        <import type="android.view.View" />

        <!-- ViewModel -->
        <variable
            name="viewModel"
            type="com.example.storechat.ui.download.DownloadQueueViewModel" />

<!--        多任务下载列表的适配器，使用 DownloadListAdapter-->
        <variable
            name="downloadAdapter"
            type="com.example.storechat.ui.home.DownloadListAdapter"
            />
    </data>

    <!-- 根布局：铺满 Drawer 区域，本身透明，只承载一张卡片 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <!-- 右上角卡片 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDownloadQueue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="top|end"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">

                <!-- 1. 顶部标题栏 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下载列表"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/ivClose"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_close"
                        android:contentDescription="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />


                <!-- 2. 下载任务列表区域（多任务） -->
                <LinearLayout
                    android:id="@+id/layoutDownloads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    >
<!--                    多任务下载列表-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerDownloads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:adapter="@{downloadAdapter}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_download_task_land"
                        tools:itemCount="3" />
                </LinearLayout>














